{#-
  The ultimate base skeleton for the entire Megacodist web site, so it
  does not extend any template.

  environment = {
  'app_name': # The name of the web application
  }

  No special context is needed.
-#}


<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <meta charset="utf-8">
  <!-- If you are going to target IE8 & IE9, uncomment the following tag (it must be as close to the top of HEAD element as you can)...
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  -->
  <meta http-equiv="content-type" content="text/html; charset=UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  {# Setting the 'favicon.ico' #}
  <link rel="shortcut icon" href="{{  static('img/favicon.ico') }}">

  <title>
    {%- block title %} {{app_name}} {% endblock title -%}
  </title>

  {% block head -%}
    {# Downloading the Karla font #}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Karla:wght@400&display=swap" rel="stylesheet">

    {# Linking Megacodist icon font for the entire Megacodist web site... -#}
    <link rel="stylesheet" href="{{ static('css/megacodist-icons.css') }}">

    {# Linking general CSS files... -#}
    <link rel="stylesheet" href="{{ static('css/base.css') }}">
    <link rel="stylesheet" href="{{ static('css/beating-transition.css') }}">
    <link rel="stylesheet" href="{{ static('css/header.css') }}">
    <link rel="stylesheet" href="{{ static('css/footer.css') }}">

    {# Linking the CSS file for the current page... -#}

    <!-- [if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <! [endif]-->
  {%- endblock head %}

  <style>
    {%- block style %}
    {%- endblock style %}
  </style>
</head>
<body>
  {#- Including header --------------------------------------------------------------------------------- #}
  {%- include 'header.j2' %}

  <main class="container">
    {% block main %}
    {% endblock main %}
  </main>

  {# Including footer---------------------------------------------------- -#}
  {%- include 'footer.j2' -%}

  {# A reserved region for some HTML elements such as modal boxes ------- -#}
  {% block endingReservedBlock %}
  {% endblock endingReservedBlock %}

  {# Including JS files at the end of page ------------------------------ -#}
  {% block jsFiles %}  
    <script defer type="module" src="{{ static('scripts/header.js') }}"></script>
  {% endblock jsFiles %}

  {# Including JS scripts the end of page ------------------------------  -#}
  <script>
    {%- block endScripts %}
    {%- endblock endScripts %}
  </script>

  {% block endJsFiles %}
  {% endblock endJsFiles %}
</body>
</html>